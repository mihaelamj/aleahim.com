{{<html}}
{{$main}}
<article class="blog-post">
    <header class="post-header">
        <div class="title-with-thumbnail">
            {{#page.image}}
            <div class="post-thumbnail">
                <img src="{{baseUrl}}{{page.image}}" alt="{{page.title}}">
            </div>
            {{/page.image}}
            <div class="title-wrapper">
                <h1>{{page.title}}</h1>
                <div class="post-meta">
                    {{#page.date}}
                    <time datetime="{{iso8601}}">{{date.long}}</time>
                    {{/page.date}}
                </div>
            </div>
        </div>
    </header>

    <div class="post-content">
        {{#page.image}}
        <div class="post-hero-image">
            <img src="{{baseUrl}}{{page.image}}" alt="{{page.title}}">
        </div>
        {{/page.image}}

        {{& page.contents.html}}
    </div>

    <footer class="post-footer">
        <a href="{{baseUrl}}/blog/" class="back-link">â† Back to Blog</a>
    </footer>
</article>
{{/main}}
{{/html}}
