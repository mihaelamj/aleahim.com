<header>
    <div class="header-content">
        <a id="logo" href="{{baseUrl}}">
            <img
                src="{{baseUrl}}/images/logo.svg"
                alt="{{site.name}}"
                title="{{site.name}}"
            >
            <h1 class="site-title">Aleahim.com</h1>
        </a>

        <nav>
            <div class="navigation">
                {{#site.navigation}}
                <a href="{{baseUrl}}{{url}}"{{#class}} class="{{.}}"{{/class}}>{{label}}</a>
                {{/site.navigation}}
            </div>
        </nav>
    </div>
</header>
