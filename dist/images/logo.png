<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 200 200">
  <defs>
    <linearGradient id="purpleGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#8B5CF6;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#C9A67C;stop-opacity:1" />
    </linearGradient>
    <radialGradient id="glowGrad">
      <stop offset="0%" style="stop-color:#A78BFA;stop-opacity:0.6" />
      <stop offset="100%" style="stop-color:#8B5CF6;stop-opacity:0" />
    </radialGradient>
  </defs>

  <!-- Glow effect -->
  <circle cx="100" cy="100" r="90" fill="url(#glowGrad)" opacity="0.4"/>

  <!-- Robot head (outer circle) -->
  <circle cx="100" cy="100" r="70" fill="none" stroke="url(#purpleGrad)" stroke-width="3"/>

  <!-- Heart center (mother symbol) -->
  <path d="M100,85 C100,75 110,70 115,75 C120,80 120,90 100,110 C80,90 80,80 85,75 C90,70 100,75 100,85 Z"
        fill="#8B5CF6" opacity="0.8"/>

  <!-- Robot eyes -->
  <circle cx="85" cy="90" r="5" fill="#C9A67C"/>
  <circle cx="115" cy="90" r="5" fill="#C9A67C"/>

  <!-- Circuit lines (tech element) -->
  <line x1="60" y1="75" x2="70" y2="75" stroke="#A78BFA" stroke-width="2"/>
  <circle cx="70" cy="75" r="2" fill="#A78BFA"/>

  <line x1="140" y1="75" x2="130" y2="75" stroke="#A78BFA" stroke-width="2"/>
  <circle cx="130" cy="75" r="2" fill="#A78BFA"/>

  <line x1="70" y1="125" x2="60" y2="130" stroke="#A78BFA" stroke-width="2"/>
  <circle cx="70" cy="125" r="2" fill="#A78BFA"/>

  <line x1="130" y1="125" x2="140" y2="130" stroke="#A78BFA" stroke-width="2"/>
  <circle cx="130" cy="125" r="2" fill="#A78BFA"/>

  <!-- Antenna (robot element) -->
  <line x1="100" y1="30" x2="100" y2="40" stroke="#8B5CF6" stroke-width="2"/>
  <circle cx="100" cy="28" r="4" fill="#C9A67C"/>

  <!-- Initials -->
  <text x="100" y="145" font-family="-apple-system, sans-serif" font-size="28"
        font-weight="bold" fill="url(#purpleGrad)" text-anchor="middle">MM</text>
</svg>
